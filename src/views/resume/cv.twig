<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .collapse-table{
            border: 1px solid grey;
            padding : 10px;
        }

        .table-collapse{
            border: 1px solid grey;
            padding : 5x;
            padding-left: 10px;
            padding-right: 10px;
        }
        h2{
            color: rgb(84, 84, 153);
        }
    </style>
</head>
<body style="width : 100%">
    <table style="width : 100%; height : 100%; border : 1px solid lightgrey; padding : 20px;" valign='baseline'>
        <tr style="width: 100%;">
            <td style="width: 100%;" valign='baseline'>
                <table style="width : 100%; border : 1px solid grey; padding : 10px;">
                    <tr> 
                        <td style="width :40%; padding-left: 20px;">
                            <img src="{{picture}}"
                            height="150px" width="150px"/>
                            <h2> {{firstname}} {{lastname}}</h2>
                            <div>
                                <p>Corporate Security Officer </p>
                                <p>{{role}}</p>
                            </div>
                            {% for license in licenses %}
                               <table>
                                    <tr>
                                        <h3><b>security License</b></h3>
                                        <td style="width :50%">
                                            <b>License Name:-</b>
                                        </td>
                                        <td style="width :50%">
                                           {{license.licenseName}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width :50%">
                                            <b>Issuing State:-</b>
                                        </td>
                                        <td style="width :50%">
                                           {{license.issuingState}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width : 50%">
                                            <b>Expiry Date:-</b>
                                        </td>
                                        <td style="width : 50%">
                                           {{license.expiryDate}}
                                        </td>
                                    </tr>
                                    
                                </table>
                            {% endfor %}
                            
                            {# <table>
                                <tr>
                                    <h3><b>Other License</b></h3>
                                    <td style="width :50%">
                                        <b>License Name:-</b>
                                    </td>
                                    <td style="width :50%">
                                       {{site}}
                                    </td>
                                </tr>
                            </table> #}
                            <table>
                                <tr>
                                    <h2><b>CONTACT</b></h2>
                                    <td style="width :50%">
                                    <b>PHONE :-</b>
                                    </td>
                                    <td style="width :50%">
                                       {{phone}}
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width :50%">
                                    <b>EMAIL :-</b>
                                    </td>
                                    <td style="width :50%">
                                       {{ email}}
                                    </td>
                                </tr>
                            </table>

                        </td>
                        <td style="width : 60%; padding-top: 0px">
                            <h2>PROFILE</h2>
                            <p style="border-bottom: 2px solid gray; padding-bottom: 20px;">{{jobDescription}}</p>
                           
                            <h2>EXPERIENCE</h2>
                            <table>
                              {% for job in experiences %}
                                    <tr>
                                       
                                        <td style="width :30%">
                                            <b>Employer Name:-</b>
                                        </td>
                                        <td style="width :70%">
                                           {{job.employer}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width :50%">
                                            <b>Role Name:-</b>
                                        </td>
                                        <td style="width :50%">
                                           {{job.role}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width : 50%">
                                            <b>Start Date:-</b>
                                        </td>
                                        <td style="width : 50%">
                                           {{job.duration}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width : 50%">
                                            <b>End Date:-</b>
                                        </td>
                                        <td style="width : 50%">
                                           {{job.duration}}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><b>Role Description</b></td>
                                        <td>{{job.jobDescription}}</td>
                                    </tr >
                                {% endfor %}
                                
                                    
                              
                            </table>
                          
                        </td>
                        
                    </tr>
                   
                </table>
            </td>
        </tr>

    </table>
</body>
</html>